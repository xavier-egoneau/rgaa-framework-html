                    <button type="button" class="rf-btn rf-btn-outline-secondary">Exporter</button>
                </div>
            </div>
        </div>
    </div>
    
    <h3>Onglets verticaux</h3>
    <div class="rf-example">
        <div class="rf-tabs rf-tabs-vertical">
            <ul class="rf-tab-list" role="tablist">
                <li class="rf-tab-item">
                    <a class="rf-tab-link rf-active" href="#vertical-settings" role="tab">
